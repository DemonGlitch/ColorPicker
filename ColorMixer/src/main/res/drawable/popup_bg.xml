<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape>
			<corners android:topLeftRadius="10dip" android:topRightRadius="10dip" android:bottomLeftRadius="10dip" android:bottomRightRadius="10dip" />
			<solid android:color="?android:attr/colorBackgroundFloating" />
			<stroke android:width="1dip" android:color="?android:attr/colorAccent" />
		</shape>
	</item>
	<item android:state_focused="true">
		<shape>
			<corners android:topLeftRadius="10dip" android:topRightRadius="10dip" android:bottomLeftRadius="10dip" android:bottomRightRadius="10dip" />
			<solid android:color="?android:attr/colorBackgroundFloating" />
			<stroke android:width="2dip" android:color="?android:attr/colorAccent" />
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape>
			<corners android:topLeftRadius="10dip" android:topRightRadius="10dip" android:bottomLeftRadius="10dip" android:bottomRightRadius="10dip" />
			<solid android:color="?android:attr/colorPrimary" />
			<stroke android:width="1dip" android:color="?android:attr/colorAccent" />
		</shape>
	</item>
	<item android:state_enabled="false">
		<shape>
			<corners android:topLeftRadius="10dip" android:topRightRadius="10dip" android:bottomLeftRadius="10dip" android:bottomRightRadius="10dip" />
			<solid android:color="?android:attr/colorBackgroundFloating" />
			<stroke android:width="1dip" android:color="?android:attr/colorAccent" />
		</shape>
	</item>
	<item>
		<shape>
			<corners android:topLeftRadius="10dip" android:topRightRadius="10dip" android:bottomLeftRadius="10dip" android:bottomRightRadius="10dip" />
			<solid android:color="?android:attr/colorBackgroundFloating" />
			<stroke android:width="1dip" android:color="?android:attr/colorAccent" />
		</shape>
	</item>
</selector>
